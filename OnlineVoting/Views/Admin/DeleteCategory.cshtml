@model onlineVoting.Models.Category

@{
    ViewBag.Title = "DeleteCategory";
    Layout = "~/Views/Shared/_Layout _admin.cshtml";
}

<div class="page_header">Delete Category</div>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form_uda border_update">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.CategoryID)
            <div class="form_model">
                @Html.Label("Name:")
                <span class="delete_layer">@Html.LabelFor(Model => Model.CategoryName)</span>
            </div>

            <br />

            <div>
                <span style="font-weight:lighter; color:darkred;">Are you sure you want to delete this category?</span>
                <br />
                <input class="button_add" type="submit" value="Delete Category" />
            </div>
        </div>

    }
</div>